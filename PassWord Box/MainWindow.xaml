<Window x:Class="PassWord_Box.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassWord_Box"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <StackPanel>
        <Label>UserName</Label>
        <TextBox Name="tbUsername"></TextBox>
        <Label>Password:</Label>
        <PasswordBox MaxLength="8"  PasswordChar="*" Name="password"></PasswordBox>
        <Button Margin="5" Content="Login" Click="Button_Click"></Button>

    </StackPanel>
</Window>
